<!DOCTYPE html>
<html lang="<%= __('lang') %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MyRhy Editor</title>
  <link rel="stylesheet" href="css/editor.css">
  <link rel="shortcut icon" href="images/favicon.ico">
  <script src="js/pace.js"></script>
</head>
<body>
  <div id="topNav">
    <div id="topLeftNav">
      <img src="https://img.icons8.com/material-outlined/24/000000/menu.png" id="menuIcon" class="icon clickable">
    </div>
    <div id="topCenterNav">
      <div id="speedContainer" class="clickable">
        <span>SPEED</span>
        <span class="settingValue">1x</span>
      </div>
      <div id="songContainer">
        <div id="settingIconContainer">
          <img src="https://img.icons8.com/windows/64/000000/settings.png" class="icon clickable">
        </div>
        <div id="songNameContainer">
          <span>TEST</span>
          <span>subtitle</span>
        </div>
        <div id="infoIconContainer">
          <img src="https://img.icons8.com/windows/64/000000/info.png" class="icon clickable">
        </div>
      </div>
      <div id="bpmContainer" class="clickable">
        <span>BPM</span>
        <span class="settingValue">130</span>
      </div>
    </div>
    <div id="topRightNav">
      <img src="https://img.icons8.com/ios/50/000000/circled-m.png" id="macroIcon" class="icon clickable">
    </div>
  </div>
  <div id="menu">
    <div id="menuTop">
      <span onclick="load()"><%= __('load') %></span>
      <br>
      <span onclick="save()"><%= __('save') %></span>
      <br>
      <span onclick="offset()"><%= __('offset') %></span>
    </div>
    <div id="menuBottom">
      <span onclick="exit()" id="exitText"><%= __('exit') %></span>
    </div>
  </div>
  <div id="bottomNav">
    <div id="bottomLeftNav">
      <img src="/images/parts/elements/play/circle.png" class="elementIcon selectedIcon ">
      <img src="/images/parts/elements/play/square.png" class="elementIcon unselectedIcon">
      <img src="/images/parts/elements/play/bullet.png" class="elementIcon unselectedIcon">
    </div>
    <div id="timeline">
      <div id="timelineContent"></div>
    </div>
  </div>
  <img src="images/parts/elements/wall.svg" id="wall_left" class="wall">
  <img src="images/parts/elements/wall.svg" id="wall_right" class="wall">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.1.2/howler.min.js"></script>
  <div id="background"></div>
  <script>
    const cdnUrl = "<%= cdnUrl %>";
    const url = "<%= url %>";
    const api = "<%= api %>";
  </script>
  <script src="js/editor.js"></script>
</body>
</html>